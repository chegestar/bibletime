<?xml version='1.0' encoding='UTF-8' standalone='no'?>
<qnx xmlns="http://www.qnx.com/schemas/application/1.0">
    <id>com.qtproject.btmini</id>
    <name>BibleTime Mini</name>
    <versionNumber>0.9.13</versionNumber>
    <description>Simple and convenient app for daily Bible reading</description>
    <initialWindow>
        <autoOrients>true</autoOrients>
        <systemChrome>none</systemChrome>
        <transparent>false</transparent>
    </initialWindow>
    <author>Crosswire</author>
    <copyright>COPYRIGHT</copyright>
    <env var="QML_IMPORT_PATH" value="app/native/imports:/usr/lib/qt4/imports"/>
    <env var="QT_PLUGIN_PATH" value="app/native/plugins:/usr/lib/qt4/plugins"/>
    <env var="LD_LIBRARY_PATH" value="app/native/lib:/usr/lib/qt4/lib/"/>
    <arg>-style</arg>
    <arg>qnxlight</arg>
    <action system="true">run_native</action>
    <!-- btmini should point to the project binary, path can be relative -->
    <asset entry="true" type="Qnx/Elf" path="btmini">btmini</asset>
    <asset path="D:\dev\mini__\platforms\common\btmini\bibletime80.png">bibletime80.png</asset>
    <icon>
        <image>bibletime80.png</image>
    </icon>
</qnx>
